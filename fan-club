    <!-- JAVASCRIPT LOGIC -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- 1. MOBILE MENU TOGGLE ---
            const mobileBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // --- 2. CHART JS: FRAUD COMPARISON (The Data Truth) ---
            const ctxFraud = document.getElementById('fraudChart').getContext('2d');
            
            // Base Data
            const baseSocialFraud = 1; // Arbitrary unit representing social fraud
            const baseFiscalFraud = 80; // Fiscal fraud is vastly larger
            
            const fraudChart = new Chart(ctxFraud, {
                type: 'bar',
                data: {
                    labels: ['FRAUDE SOCIALE (BIM/CPAS)', 'FRAUDE FISCALE (Grands Groupes)'],
                    datasets: [{
                        label: 'Coût Estimé (Milliards €)',
                        data: [baseSocialFraud, baseFiscalFraud],
                        backgroundColor: ['#8B0000', '#1F1F1F'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.y + ' Unités de Chaos';
                                }
                            }
                        }
                    },
                    scales: {
                        y: { beginAtZero: true, grid: { display: false } },
                        x: { grid: { display: false } }
                    }
                }
            });

            // Interaction: Reality Distortion Slider
            const slider = document.getElementById('distortion-slider');
            const distortionText = document.getElementById('distortion-text');

            slider.addEventListener('input', (e) => {
                const val = parseInt(e.target.value);
                const distortionFactor = val / 2; // scale factor
                
                // As slider moves right (Media Hype), Social Fraud grows disproportionately
                // Fiscal Fraud shrinks slightly (ignored)
                
                let newSocial = baseSocialFraud + (distortionFactor * 5);
                let newFiscal = baseFiscalFraud - (distortionFactor * 0.5);

                fraudChart.data.datasets[0].data = [newSocial, newFiscal];
                fraudChart.update();

                if (val < 20) {
                    distortionText.innerText = "Mode: Analyse Objective";
                    distortionText.style.color = "#1F1F1F";
                } else if (val < 60) {
                    distortionText.innerText = "Mode: Reportage 19h";
                    distortionText.style.color = "#b91c1c";
                } else {
                    distortionText.innerText = "Mode: ÉDITORIAL CHRISTOPHE DEBORSU (PANIC!)";
                    distortionText.style.color = "#8B0000";
                    distortionText.style.textShadow = "1px 1px 0px black";
                }
            });

            // --- 3. CHART JS: ACDAB RADAR (The Concept) ---
            const ctxAcdab = document.getElementById('acdabChart').getContext('2d');
            new Chart(ctxAcdab, {
                type: 'radar',
                data: {
                    labels: ['Sensationalisme', 'Stigmatisation', 'Rigueur Journalistique', 'Mépris de Classe', 'Divertissement'],
                    datasets: [{
                        label: 'Indice DEBORSU',
                        data: [95, 90, 20, 85, 90],
                        fill: true,
                        backgroundColor: 'rgba(139, 0, 0, 0.2)',
                        borderColor: '#8B0000',
                        pointBackgroundColor: '#8B0000',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#8B0000'
                    }, {
                        label: 'Réalité du Terrain',
                        data: [10, 20, 80, 5, 10],
                        fill: true,
                        backgroundColor: 'rgba(31, 31, 31, 0.1)',
                        borderColor: '#1F1F1F',
                        pointBackgroundColor: '#1F1F1F'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    elements: { line: { tension: 0.1 } },
                    scales: {
                        r: {
                            angleLines: { color: 'rgba(0,0,0,0.1)' },
                            grid: { color: 'rgba(0,0,0,0.1)' },
                            pointLabels: {
                                font: { family: "'Courier Prime', monospace", size: 10 }
                            },
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                    }
                }
            });

            // --- 4. CANVAS: CHAOS SIMULATION (The PhD Thesis) ---
            const canvas = document.getElementById('chaosCanvas');
            const ctx = canvas.getContext('2d');
            const container = document.getElementById('canvas-wrapper');
            
            // Set canvas size
            canvas.width = container.clientWidth;
            canvas.height = container.clientHeight;

            let particles = [];
            let entropy = 5;
            let control = 50;

            class Particle {
                constructor() {
                    this.x = Math.random() * canvas.width;
                    this.y = Math.random() * canvas.height;
                    this.size = Math.random() * 3 + 1;
                    this.vx = (Math.random() - 0.5) * 2;
                    this.vy = (Math.random() - 0.5) * 2;
                    this.type = Math.random() > 0.8 ? 'anarchist' : 'citizen'; // 20% agitators
                }

                update() {
                    // Control creates gravity towards centers (Institutions)
                    // Entropy creates random movement
                    
                    let speed = entropy * 0.5;

                    // Anarchy movement
                    this.x += this.vx * speed;
                    this.y += this.vy * speed;

                    // Capitalism/Control pull (towards grid points)
                    if (this.type === 'citizen') {
                        let pullStrength = control / 2000;
                        // Target a grid layout
                        let targetX = Math.round(this.x / 50) * 50;
                        let targetY = Math.round(this.y / 50) * 50;
                        
                        this.x += (targetX - this.x) * pullStrength;
                        this.y += (targetY - this.y) * pullStrength;
                    }

                    // Boundaries
                    if (this.x < 0) this.x = canvas.width;
                    if (this.x > canvas.width) this.x = 0;
                    if (this.y < 0) this.y = canvas.height;
                    if (this.y > canvas.height) this.y = 0;
                }

                draw() {
                    ctx.fillStyle = this.type === 'anarchist' ? '#ef4444' : '#ffffff';
                    ctx.beginPath();
                    // Draw squares for Low Tech feel
                    ctx.fillRect(this.x, this.y, this.size, this.size);
                }
            }

            function initSim() {
                particles = [];
                for(let i=0; i < 150; i++) {
                    particles.push(new Particle());
                }
            }

            function animate() {
                // Trail effect
                ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);

                particles.forEach(p => {
                    p.update();
                    p.draw();
                });

                requestAnimationFrame(animate);
            }

            // Controls
            document.getElementById('entropy-slider').addEventListener('input', (e) => {
                entropy = e.target.value;
                updateStatus();
            });
            document.getElementById('control-slider').addEventListener('input', (e) => {
                control = e.target.value;
                updateStatus();
            });
            document.getElementById('reset-sim').addEventListener('click', initSim);

            function updateStatus() {
                const statusEl = document.getElementById('sim-status');
                if (entropy > 15) {
                    statusEl.innerText = "Système: INSURRECTIONNEL (Chaos total)";
                    statusEl.style.color = "#ef4444";
                } else if (control > 80) {
                    statusEl.innerText = "Système: TOTALITAIRE (Stagnation)";
                    statusEl.style.color = "#555";
                } else {
                    statusEl.innerText = "Système: ÉQUILIBRE PRÉCAIRE";
                    statusEl.style.color = "#fff";
                }
            }

            // Resize handler
            window.addEventListener('resize', () => {
                canvas.width = container.clientWidth;
                canvas.height = container.clientHeight;
                initSim();
            });

            // Start
            initSim();
            animate();

        });
    </script>
</body>
</html>
