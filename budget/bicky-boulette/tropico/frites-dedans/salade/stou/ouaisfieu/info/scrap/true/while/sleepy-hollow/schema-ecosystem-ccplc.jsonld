        {
            "@type": "DefinedTerm",
            "@id": "https://ccplc.eu/ecp/#concept",
            "name": "Économie Contributive Provisionnée",
            "alternateName": "ECP",
            "description": "Modèle économique innovant permettant aux personnes hors emploi (incapacité de travail, chômage, RIS) de contribuer à des projets d'utilité sociale tout en accumulant une reconnaissance financière différée (provisionnement), sans perte de droits sociaux. La valorisation est capitalisée mais non versée immédiatement, évitant le piège institutionnel du taux marginal supérieur à 100%.",
            "inDefinedTermSet": {
                "@type": "DefinedTermSet",
                "name": "Innovation Sociale Belgique",
                "hasDefinedTerm": [
                    {
                        "@type": "DefinedTerm",
                        "name": "Provisionnement différé",
                        "description": "Mécanisme d'accumulation de valorisation financière qui n'est versée que lorsque la personne se stabilise (retour à l'emploi, pension, choix personnel)."
                    },
                    {
                        "@type": "DefinedTerm",
                        "name": "Fonds de Contribution Citoyenne",
                        "alternateName": "FCC",
                        "description": "Structure de confiance gérée de manière mutualisée par des acteurs de l'économie sociale (mutuelles, syndicats, associations), chargée de recevoir les financements et gérer les comptes de provisionnement individuels."
                    },
                    {
                        "@type": "DefinedTerm",
                        "name": "Piège institutionnel",
                        "description": "Situation paradoxale où le système belge indemnise l'inactivité mais pénalise financièrement toute tentative de contribution, créant un taux marginal effectif supérieur à 100% pour les personnes précaires."
                    },
                    {
                        "@type": "DefinedTerm",
                        "name": "Statut BIM",
                        "alternateName": "Bénéficiaire de l'Intervention Majorée",
                        "description": "Statut mutuelle permettant un remboursement plus élevé des soins de santé. Sa perte au premier euro d'activité constitue l'un des freins majeurs à la contribution."
                    },
                    {
                        "@type": "DefinedTerm",
                        "name": "Ruling fiscal",
                        "description": "Décision anticipée de l'administration fiscale (SDA du SPF Finances) permettant de sécuriser juridiquement un montage avant sa mise en œuvre."
                    }
                ]
            }
        },

